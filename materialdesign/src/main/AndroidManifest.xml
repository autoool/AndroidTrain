<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.material">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarTheme">
        <activity android:name=".activity.MainActivity">

        </activity>
        <activity
            android:name=".activity.bottomsheet.ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"></activity>

        <activity
            android:name=".activity.bottomsheet.ToolbarActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.bottomsheet.NestedScrollViewActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"></activity>

        <activity
            android:name=".activity.bottomsheet.SheetActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"></activity>

        <activity
            android:name=".activity.bottomsheet.SheetRecyclerviewActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"></activity>

        <activity
            android:name=".activity.bottomsheet.SheetDialogActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme"></activity>

    </application>

</manifest>