<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/imageview_special"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:src="@mipmap/special_01_150" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/textview_song"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Don't Say a Word"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/textview_singer"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Ellie Goulding"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageButton
                android:id="@+id/imagebutton_previous"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@mipmap/previous" />

            <ImageButton
                android:id="@+id/imagebutton_pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imagebutton_previous"
                android:layout_toRightOf="@id/imagebutton_previous"
                android:background="@android:color/transparent"
                android:src="@mipmap/pause" />

            <ImageButton
                android:id="@+id/imagebutton_next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imagebutton_pause"
                android:layout_toRightOf="@id/imagebutton_pause"
                android:background="@android:color/transparent"
                android:src="@mipmap/next" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>