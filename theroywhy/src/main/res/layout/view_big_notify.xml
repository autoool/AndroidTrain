<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp">

        <ImageView
            android:id="@+id/imageview_special"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:src="@mipmap/special_01_50" />

        <ImageButton
            android:id="@+id/imagebutton_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imageview_special"
            android:layout_toStartOf="@id/imageview_special"
            android:background="@android:color/transparent"
            android:src="@mipmap/next" />

        <ImageButton
            android:id="@+id/imagebutton_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imagebutton_next"
            android:layout_toStartOf="@id/imagebutton_next"
            android:background="@android:color/transparent"
            android:src="@mipmap/pause" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imagebutton_pause"
            android:layout_toStartOf="@id/imagebutton_pause"
            android:background="@android:color/transparent"
            android:src="@mipmap/previous" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/textview_song"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Don't Say a Word"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/textview_singer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Ellie Goulding"
            android:textColor="@color/text_gray" />

    </LinearLayout>

</RelativeLayout>