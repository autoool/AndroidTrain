<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="text" format="string"/>
    <attr name="textColor" format="color"/>
    <attr name="textSize" format="dimension"/>
    <attr name="src" format="reference"/>
    <attr name="ScaleType">
        <enum name="fillXY" value="0"/>
        <enum name="center" value="1"/>
    </attr>

    <declare-styleable name="CustomTitTextView">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
    </declare-styleable>

    <declare-styleable name="CustomImageText">
        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="src"/>
        <attr name="ScaleType"/>
    </declare-styleable>
</resources>