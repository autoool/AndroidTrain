    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <SurfaceView
            android:id="@+id/surfaceview_vedio"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <Button
            android:id="@+id/button_play_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/surfaceview_vedio"
            android:background="@color/blue"
            android:text="start" />

        <SeekBar
            android:id="@+id/seekbar_vedio"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignBaseline="@id/button_play_start"
            android:layout_below="@id/surfaceview_vedio"
            android:layout_toEndOf="@id/button_play_start"
            android:layout_toRightOf="@id/button_play_start" />


    </RelativeLayout>

</LinearLayout>