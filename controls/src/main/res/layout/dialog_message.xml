<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="160dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView
        android:id="@+id/textview_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dialogtitle"
        />

    <TextView
        android:id="@+id/textview_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:textColor="@color/dialogtext"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp">

        <TextView
            android:id="@+id/textview_dialog_confirm"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:textColor="@color/dialogbutton"/>

        <TextView
            android:id="@+id/textview_dialog_cancel"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/textview_dialog_confirm"
            android:layout_toStartOf="@id/textview_dialog_confirm"
            android:text="取消"
            android:textColor="@color/dialogbutton"/>

    </RelativeLayout>
</LinearLayout>