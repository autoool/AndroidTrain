<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/textview_spinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/purple"
                android:gravity="center"
                android:text="Spinner"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textview_radiolist"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/orange"
                android:gravity="center"
                android:text="radiolist"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textview_commondialog"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center"
                android:text="MsgDialog"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textview_startapp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center"
                android:text="startapp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content1"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/textview_appcompat"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:gravity="center"
                android:text="appcompat"
                android:textColor="@color/white"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
