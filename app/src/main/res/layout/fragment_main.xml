<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/button_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Title"/>

    <Button
        android:id="@+id/buttondisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_title"
        android:text="@string/dislpaymessage"/>

    <Button
        android:id="@+id/buttonactionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttondisplay"
        android:text="@string/hideactionbar"/>

    <EditText
        android:id="@+id/edittext_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/buttonactionbar"/>
</RelativeLayout>